<odoo>
    <!-- Menú raíz personalizado para Malkion , sales, menu sales, todos petan-->
    <menuitem id="menu_malkion_root" name="Malkion" sequence="10"/>

    <!-- Submenú para Contratos -->
    <menuitem id="menu_contract_root" name="Contratos" parent="menu_malkion_root" sequence="10"/>

    <!-- Acción para ver la lista de contratos -->
    <record id="action_contract_list" model="ir.actions.act_window">
        <field name="name">Contratos</field>
        <field name="res_model">malkion.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Submenú para acceder a la acción de contratos -->
    <menuitem id="menu_contract_action" name="Gestión de contratos"
              parent="menu_contract_root"
              action="action_contract_list"
              sequence="10"/>
</odoo>
