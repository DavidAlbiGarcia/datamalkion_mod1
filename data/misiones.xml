<odoo>
  <data noupdate="0">

    <record id="mision_demo_acme" model="malkion.mission">
      <field name="name">Misión Demo – ACME</field>

      <!-- Estado e información -->
      <field name="estado">iniciada</field>
      <field name="observaciones">Muestras de aire urbano</field>

      <!-- Gestores -->
      <field name="jefe_data_id" ref="employee_jefe_datos"/>
      <field name="gestor_hunters_id" ref="employee_gestor_hunters"/>
      <field name="gestor_equipo_id" ref="employee_gestor_equipo"/>
      <field name="gestor_transportes_id" ref="employee_gestor_transportes"/>

      <!-- Responsables -->
      <field name="responsable_equipo_id" ref="employee_juan"/>
      <field name="responsable_transporte_id" ref="employee_juan"/>

      <!-- M2M: Empleados, equipo, transporte, puntos -->
      <field name="roles_ids" eval="[(6, 0, [ref('employee_juan')])]"/>
      <field name="equipo_ids" eval="[(6, 0, [ref('equipo_guantes_1')])]"/>
      <field name="transporte_ids" eval="[(6, 0, [ref('transporte_furgoneta_1')])]"/>
      <field name="puntos_interes_ids" eval="[(6, 0, [ref('punto_recogida_1'), ref('punto_entrega_1')])]"/>
    </record>

  </data>
</odoo>
